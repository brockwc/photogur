<div id="main-h1">
  <h1><%= link_to "[+]", "/pictures/new" %> Photogur</h1>
</div>

<div class="picture-index">
<% @pictures.each do |picture| %> 
  <p id="title"><%= picture[:title] %>,</p> 
  <p id="artist-name"><%= picture[:artist] %></p>
  <%= link_to image_tag(picture.url), "pictures/#{picture.id}" %>
  <hr>
<% end %>
</div>

<h1>Most Recent Pictures</h1>
<ul>
  <% @most_recent_pictures.each do |picture| %>
  <li><%= picture.title %></li>
  <% end %>
</ul>

<h1>Pictures over 1 month old: <%= @over_one_month_old.count %></h1>

<ul>
  <%  @over_one_month_old.each do |picture| %>
  <li><%= picture.title %></li>
  <% end %>
</ul>